<!DOCTYPE html>
<html>
<head>
  <title>HackerNews</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <nav>
    <% if user_signed_in? %>
      <ul class="navbar">
        <li class="status"> <%= link_to 'Home', root_path %></li>
        <li class="status">Signed in as: <%= current_user.email %></li>
        <li class="status"><%= link_to 'Sign out', destroy_user_session_path %></li>
      </ul>
    <% end %>
  </nav>
</header>

<%= yield %>

</body>
</html>
