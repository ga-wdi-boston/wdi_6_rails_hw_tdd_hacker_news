<section class="Articles-Homepage">
<h1>All Articles:</h1>
	<table class="table">
	<div class="panel-heading">
	<tr>
		<th>Title</th>
		<th>Description</th>
		<th>More Info?</th>
		<th>Comment on it?</th>
		<th>Up-Vote it?</th>
		<th>Down-Vote it?</th>
	</tr>
	</div>
	<% @articles.each do |article|%>
		<div class="panel-body">
		<tr>
			<td> <%= link_to article.title, article.url, :target => "_blank" %> </td>
			<td> <%= article.blurb %> </td>
			<td> <%= link_to "more", article_path(article.id) %></td>
			<% if user_signed_in? %>
			<td><%= link_to "comment", [article, :comments] %> </td>
			<td><%= link_to 'vote up on article',   article_up_vote_path(article), method: :post, :class => "btn btn-primary btn-sm" %></td>
	    <td><%= link_to 'vote down on article', article_down_vote_path(article), method: :post, :class => "btn btn-primary btn-sm" %></td>
	    <% else %>
	    <td> <%= "Sign in for more options" %> </td>
	    <% end %>
		</tr>
		</div>
	<%end%>
	</table>
<%= link_to "add article", new_article_path, :class => "btn btn-info btn-sm" %>
</section>

