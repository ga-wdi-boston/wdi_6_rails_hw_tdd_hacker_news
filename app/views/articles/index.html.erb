<ol>
  <% @articles.each do |article| %>
  <li class="article-container">
    <%= link_to article.title, article.url %>
    <p><%= article.text %></p>
    <ul class="submenu">
      <li><%= article.count_votes %></li>
      <li><%= link_to 'vote up',  [article, :vote_up] %></li>
      <li><%= link_to 'vote down', [article, :vote_down] %></li>
      <li><%= link_to 'comments', [article, :comments] %></li>
    </ul>
  </li>
  <% end %>
</ol>
