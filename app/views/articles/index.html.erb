<section class="Articles-Homepage">
<h1>All Articles:</h1>
	<table class="table">
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>More Info?</th>
			<th>Comment on it?</th>
			<th>Up-Vote it?</th>
			<th>Down-Vote it?</th>
		</tr>
		<% @articles.each do |article|%>
		<tr>
			<td> <%= link_to article.title, article.url, :target => "_blank" %> </td>
			<td> <%= article.blurb %> </td>
			<td> <%= link_to "more", article_path(article.id) %></td>
			<td><%= link_to "comment", [article, :comments] %> </td>
			<td><%= link_to '', article_up_vote_path(article), method: :post, :class => "btn btn-primary btn-lg glyphicon glyphicon-circle-arrow-up", :title => "up vote" %></td>
		  <td><%= link_to '', article_down_vote_path(article), method: :post, :class => "btn btn-danger btn-lg glyphicon glyphicon-circle-arrow-down", :title => "down vote" %></td>
		</tr>
	<%end%>
</table>
<% if user_signed_in? %>
	<%= link_to "add article", new_article_path, :class => "btn btn-info btn-md" %>
<% else %>
<p> <%= "Sign in for more options" %> </p>
<% end %>
</section>

