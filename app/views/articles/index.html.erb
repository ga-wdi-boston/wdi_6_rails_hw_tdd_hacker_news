<ol>
<% @articles.each do | article | %>
	<li>

	<a href="http://<%= article.url %>", target="blank"><%= article.title %></a> (<%= article.url.gsub("http://", "").split("/")[0] %>)
	| <%=link_to 'upvote', article_votes_path(article, vote: @vote, direction: true), method: :post %> |
	<%=link_to 'downvote', article_votes_path(article, vote: @vote, direction: false), method: :post %><br>
	<div class="article_subcontent">
	<%= find_article_points(article) %> points by <%= article.user.email %> | <%= article.comments.count %> <%= link_to 'comments', [article, :comments] %>
	</div>
	</li>
<% end %>
</ol>
