<% if user_signed_in? %>
	<%= form_for [@post, @comment] do |f| %>
		<%= f.label :body %>
		<%= f.text_area :body %>

		<%= f.hidden_field :user_id, value: current_user.id %>
		<%= f.hidden_field :post_id, value: @post.id %>

		<%= f.submit %>
	<% end %>
<% else %>
	<%= link_to 'Sign in to leave your comment!', new_user_session_path %>
<% end %>
