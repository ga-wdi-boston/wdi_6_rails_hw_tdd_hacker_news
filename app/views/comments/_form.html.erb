<% if user_signed_in? %>
	<%= form_for [@post, @comment] do |f| %>
		<%= f.label :body, class: 'display-none' %>
		<%= f.text_area :body, class: 'comment-form-box' %>

		<%= f.hidden_field :user_id, value: current_user.id %>
		<%= f.hidden_field :post_id, value: @post.id %>

		<%= f.submit %>
	<% end %>
<% end %>
