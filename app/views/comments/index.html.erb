<h1><%= @article.title %></h1>

<%= form_for :comment do |f| %>
  <%= f.label :content, 'content' %><%= f.text_field :content %>
  <%= f.submit 'add comment' %>
<% end %>
<% @comments.each do |comment| %>
<article>
  <p><%= comment.content %></p>
</article>
<% end %>

<%= link_to 'back', @article %>
