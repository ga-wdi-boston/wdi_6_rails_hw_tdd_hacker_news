<h1><%= @article.title %></h1>

<%= form_for [@article, @comment] do |f| %>
	<%= f.label :content %>
	<%= f.text_area :content %><br>
	<%= f.submit value="Submit Comment" %>
<% end %>

<ol>
<% @comments.each do |comment| %>
	<li><b>Author: <%= comment.user.email %></b> <br>Comment: <%= comment.content %> |
		<%=link_to 'upvote', article_comment_votes_path(@article, comment, vote: @vote, direction: true), method: :post %> |
		<%=link_to 'downvote', article_comment_votes_path(@article, comment, vote: @vote, direction: false), method: :post %><br>
		Upvotes: <%= comment.votes.where(direction: true).count %> | Downvotes: <%= comment.votes.where(direction: false).count %>
	</li>
<% end %>
</ol>
<%= link_to 'Back to Articles', articles_path %>
