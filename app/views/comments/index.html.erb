<h1><%= @article.title %></h1>

<%= form_for [@article, @comment] do |f| %>
	<%= f.label :content %>
	<%= f.text_area :content %><br>
	<%= f.submit value="Submit Comment" %>
<% end %>

<% @comments.each do |comment| %>
	<b>Author: <%= comment.user.email %></b> Comment: <%= comment.content %><br>
<% end %>

<%= link_to 'Back to Articles', articles_path %>
