<h2><%= link_to @post.title, @post.link %></h2>

<p><%= @post.description %></p>

<h3>Comments</h3>

<% @post.comments.each do |comment| %>
	<article class="comment_<%= comment.id %>">
		<p><%= comment.body %></p>
		<p>Posted by <%= comment.user.email %></p>
	</article>
<% end %>


<h4>What does the fox say?</h4>
<%= form_for [@post, @comment] do |f| %>
	<%= f.label :body %>
	<%= f.text_field :body %>
	<%= f.submit "Submit Comment", controller: :posts, action: :create %>
<% end %>
