<h2><%= link_to @post.title, @post.link %></h2>

<p><%= @post.description %></p>

<h3>Comments</h3>

<section>
	<% @post.comments.each do |comment| %>
		<p><%= comment.body %></p>
		<p>Posted by <%= comment.user.email %></p>
	<% end %>
</section>

<section>
	<h4>What does the fox say?</h4>
	<%= form_for [@post, @comment] do |f| %>
		<%= f.label :body %>
		<%= f.text_field :body %>
		<%= f.submit "Submit Comment", controller: :posts, action: :create %>
	<% end %>
</section>
