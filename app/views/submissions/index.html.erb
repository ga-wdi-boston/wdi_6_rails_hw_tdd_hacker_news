<h1>Hacky News</h1>

<%= link_to 'New Submission', new_submission_path %><br>

<table class="table table-striped">
<% @submissions.each do |submission| %>
<tr>
  <td><strong><%= link_to "#{submission.title}", submission_path(submission.id) %></button></td>
  <td><%= submission.link %></strong>
  <td><%= submission.description %></td>
  <td><strong>User: </strong><%= submission.user.email %></td>
  <td><%= button_to 'Up vote', submission_votes_path(submission.id), method: :post %></td>
  <td><strong>Votes: </strong><%= submission.vote_count %></td>
</tr>
  <% end %>
</table>



