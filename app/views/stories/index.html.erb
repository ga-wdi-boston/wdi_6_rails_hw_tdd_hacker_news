<div class="container">
  <div class="row">
    <h1>Top Stories</h1>
    <%= link_to "Submit", new_story_path%>
    <ol>
      <% @stories.each do |story| %>
        <div class="col-lg-12">
          <li class="story">
            <%= link_to story.title, url_for(story.link), target: "_blank" %><br>
            <%= story.description %>
            <%= link_to "discuss (#{pluralize(story.comments.count, 'comment')})", new_story_comment_path(story.id) %>
            <%= button_to "Upvote", [story, :upvote], method: :post %>
            <%= button_to "Downvote", [story, :downvote], method: :post %>
            <%= pluralize(story.vote_score, 'point') %>
          </li>
        </div>
      <% end %>
    </ol>
  </div>
</div>
