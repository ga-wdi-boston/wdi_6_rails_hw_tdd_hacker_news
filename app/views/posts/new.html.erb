<h2>Submit a Link</h2>

<%= form_for @post do |f| %>
	<p><%= f.label :title, "Title" %>
	<%= f.text_field :title %></p>
	<p><%= f.label :link, "Link" %>
	<%= f.text_field :link %></p>
	<p><%= f.label :description, "Description" %>
	<%= f.text_field :description %></p>
	<p><%= f.submit "Submit Link" %></p>
<% end %>
